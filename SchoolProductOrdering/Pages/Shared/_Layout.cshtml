<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LearnMate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body style="background-color: #f8f9fa;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-transparent border-0 position-absolute w-100" style="z-index: 10;">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-page="/Index" style="color: #CF3338; font-size: 1.5rem;">LearnMate</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        @{
                            // Check if we are on the Home/Index page
                            var isHomePage = ViewContext.RouteData.Values["page"]?.ToString() == "/Index";
                            var textColor = isHomePage ? "text-white" : "text-dark";
                        }

                        <li class="nav-item">
                            <a class="nav-link @textColor fw-bold" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @textColor fw-bold" asp-page="/Products/Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @textColor fw-bold position-relative" asp-page="/Cart">
                                Cart
                                @if (Context.Session.GetInt32("CartCount") > 0)
                                {
                                    <span class="badge rounded-pill bg-danger">
                                        @Context.Session.GetInt32("CartCount")
                                    </span>
                                }
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer text-muted bg-transparent border-0 fixed-bottom pb-3">
        <div class="container text-center text-white">
            &copy; 2026 - LearnMate
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>