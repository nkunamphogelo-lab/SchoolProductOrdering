@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to LearnMate";
}

<style>
    /* 1. Target the main area to be full screen */
    .hero-wrapper {
        position: fixed; /* Fixes it to the viewport */
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('/image/welcome-bg.jpg'); /* Ensure path is correct */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: -1; /* Puts it behind everything */
    }

    /* 2. Style the welcome card */
    .welcome-card {
        background: rgba(255, 255, 255, 0.85); /* More transparent */
        backdrop-filter: blur(10px); /* Blurs the background behind the card */
        padding: 4rem;
        border-radius: 30px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.3);
        max-width: 700px;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* 3. Hide the footer for this page only to keep it clean */
    footer {
        display: none !important;
    }
</style>

<div class="hero-wrapper">
    <div class="welcome-card">
        <h1 class="display-3 fw-bold mb-3">Welcome to <span style="color: #CF3338;">LearnMate</span></h1>
        <p class="lead fs-4 text-dark">Your one-stop shop for high-quality stationery and electronics.</p>
        <p class="text-muted mb-4">Empowering students and teachers with the best tools.</p>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a asp-page="/Products/Index" class="btn btn-lg px-5 text-white shadow-sm"
               style="background-color: #017C45; border-radius: 50px; font-weight: bold; font-size: 1.25rem;">
                Start Shopping <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</div>