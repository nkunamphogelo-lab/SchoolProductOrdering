@page
@model SchoolProductOrdering.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome";
}

<div class="container text-center py-5">
    <h1 class="display-3 fw-bold" style="color: #CF3338;">Welcome to LearnMate</h1>
    <p class="lead text-muted mb-5">Your destination for quality school supplies.</p>

    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
        <a asp-controller="Products" asp-action="Index" class="btn btn-lg px-5 shadow-sm text-white" style="background-color: #017C45; border-radius: 50px;">
            Start Shopping
        </a>

        <a asp-controller="Products" asp-action="Create" class="btn btn-lg btn-outline-dark px-5 shadow-sm" style="border-radius: 50px;">
            + Add New Product
        </a>
    </div>
</div>