@page
@model SchoolProductOrdering.Pages.Products.IndexModel

@{
    ViewData["Title"] = "LearnMate Catalog";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold" style="color: #CF3338; margin-bottom: 0;">LearnMate Catalog</h2>
            <p class="text-muted">Quality school supplies for every student.</p>
        </div>
        <a asp-page="./Create" class="btn text-white fw-bold shadow-sm" style="background-color: #017C45; border-radius: 8px; padding: 10px 20px;">
            <i class="bi bi-plus-lg"></i> + Add Product
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model.Products)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm text-center p-3" style="transition: transform 0.2s;">
                    <div class="bg-light rounded mb-3 d-flex align-items-center justify-content-center" style="height: 200px; overflow: hidden;">
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="@item.ImagePath" class="img-fluid" style="max-height: 90%; object-fit: contain;" alt="@item.Name" />
                        }
                        else
                        {
                            <i class="bi bi-image text-secondary" style="font-size: 3rem;"></i>
                        }
                    </div>

                    <div class="card-body py-2">
                        <small class="text-muted fw-bold text-uppercase" style="font-size: 0.7rem; letter-spacing: 1px;">Stationery</small>
                        <h5 class="card-title fw-bold mt-2 mb-1">@item.Name</h5>
                        <h4 class="fw-bold" style="color: #CF3338;">R @item.Price.ToString("N2")</h4>
                        <p class="text-muted small mt-2" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                            @item.Description
                        </p>
                    </div>

                    <div class="card-footer bg-transparent border-0 d-grid gap-2 mt-auto">
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-dark rounded-pill btn-sm fw-bold">
                            View Details
                        </a>

                        <form method="post" asp-page-handler="AddToCart">
                            <input type="hidden" name="productId" value="@item.Id" />
                            <button type="submit" class="btn text-white w-100 rounded-pill shadow-sm py-2" style="background-color: #017C45; font-weight: bold;">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>