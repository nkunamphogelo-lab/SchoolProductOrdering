@page
@model SchoolProductOrdering.Pages.Products.IndexModel

@{
    ViewData["Title"] = "LearnMate Catalog";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h2 class="fw-bold" style="color: #CF3338;">LearnMate Catalog</h2>
        <a asp-page="./Create" class="btn text-white fw-bold shadow-sm" style="background-color: #017C45; border-radius: 8px;">
            + Add Product
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model.Product)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm text-center p-3">
                    <div class="bg-light rounded mb-3 d-flex align-items-center justify-content-center" style="height: 180px;">
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="@item.ImagePath" class="img-fluid" style="max-height: 100%; object-fit: contain;" alt="@item.Name" />
                        }
                        
                    </div>

                    <div class="py-2 mb-3">
                        <small class="text-muted fw-bold text-uppercase" style="font-size: 0.7rem;">Products</small>
                        <h5 class="card-title fw-bold mt-2">@item.Name</h5>
                        <h4 class="fw-bold" style="color: #CF3338;">R @item.Price</h4>
                    </div>

                    <div class="card-body py-0">
                        <p class="text-muted small">@item.Description</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 d-grid gap-2">
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-dark rounded-pill shadow-sm">
                            View Details
                        </a>

                        <form method="post" asp-page-handler="AddToCart">
                            <input type="hidden" name="productId" value="@item.Id" />
                            <button type="submit" class="btn text-white w-100 rounded-pill shadow-sm" style="background-color: #017C45; font-weight: bold;">
                                Add to Cart
                            </button>
                        </form>
                    </div>
                  
                </div>
            </div>
        }
    </div>
</div>