@page
@model SchoolProductOrdering.Pages.Products.CreateModel

@{
    ViewData["Title"] = "Add New Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 shadow-sm p-4 bg-white rounded border">
            <h2 class="fw-bold mb-4" style="color: #CF3338;">Add to LearnMate Catalog</h2>
            <hr />

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Product.Name" class="form-label fw-bold">Product Name <span class="text-danger">*</span></label>
                    <input asp-for="Product.Name" class="form-control shadow-sm" placeholder="e.g. Sharp Scientific Calculator" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Price" class="form-label fw-bold">Price (R) <span class="text-danger">*</span></label>
                    <input asp-for="Product.Price" class="form-control shadow-sm" type="number" step="0.01" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Product.Description" class="form-control shadow-sm" rows="3" placeholder="Brief details about the product..."></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Product.ImagePath" class="form-label fw-bold">Image URL</label>
                    <input asp-for="Product.ImagePath" class="form-control shadow-sm" placeholder="Paste image link here" />
                    <span asp-validation-for="Product.ImagePath" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn text-white fw-bold py-2 shadow" style="background-color: #017C45;">Save to Shop</button>
                    <a asp-page="./Index" class="btn btn-outline-secondary">Cancel and Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}