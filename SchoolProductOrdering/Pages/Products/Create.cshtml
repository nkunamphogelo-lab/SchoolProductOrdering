@page
@model SchoolProductOrdering.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Add New Stationery";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h2 class="fw-bold mb-4" style="color: #CF3338;">Add New Product</h2>

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Product.Name" class="form-label fw-bold"></label>
                            <input asp-for="Product.Name" class="form-control" placeholder="e.g. HB Pencils" />
                            <span asp-validation-for="Product.Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Product.Price" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text">R</span>
                                <input asp-for="Product.Price" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Product.Price" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Product.Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Product.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Product.Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Product.ImagePath" class="form-label fw-bold">Image Path</label>
                            <input asp-for="Product.ImagePath" class="form-control" placeholder="/images/products/item.jpg" />
                            <small class="text-muted">Place the image in wwwroot/images/products/ first.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn text-white fw-bold py-2" style="background-color: #017C45;">
                                Save Product
                            </button>
                            <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}