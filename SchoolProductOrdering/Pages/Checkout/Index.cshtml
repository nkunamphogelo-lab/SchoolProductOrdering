@page
@model SchoolProductOrdering.Pages.Checkout.IndexModel
@{
    ViewData["Title"] = "Secure Checkout";
    decimal deliveryFee = 75.00m;
    decimal finalTotal = Model.TotalAmount + deliveryFee;
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mb-4">
            <h2 class="fw-bold mb-4" style="color: #CF3338;">Your Stationery Basket</h2>

            @if (Model.CartItems.Any())
            {
                <div class="card border-0 shadow-sm mb-3">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Product</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-end pe-4">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold text-dark">@item.ProductName</div>
                                            <small class="text-muted">R @item.Price.ToString("N2") each</small>
                                        </td>
                                        <td class="text-center">
                                            <div class="d-flex justify-content-center align-items-center">
                                                <form method="post" asp-page-handler="UpdateQuantity">
                                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                                    <input type="hidden" name="increment" value="-1" />
                                                    <button class="btn btn-sm btn-outline-secondary px-2">-</button>
                                                </form>

                                                <span class="mx-3 fw-bold">@item.Quantity</span>

                                                <form method="post" asp-page-handler="UpdateQuantity">
                                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                                    <input type="hidden" name="increment" value="1" />
                                                    <button class="btn btn-sm btn-outline-secondary px-2">+</button>
                                                </form>
                                            </div>
                                        </td>
                                        <td class="text-end pe-4 fw-bold">
                                            R @((item.Price * item.Quantity).ToString("N2"))
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="card border-0 shadow-sm p-5 text-center">
                    <i class="bi bi-cart-x text-muted mb-3" style="font-size: 3rem;"></i>
                    <h4>Your basket is empty</h4>
                    <p class="text-muted">Go back to the catalog to add some stationery!</p>
                </div>
            }

            <a asp-page="/Products/Index" class="text-muted text-decoration-none">← Continue Shopping</a>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Payment Summary</h5>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Items Subtotal</span>
                        <span>R @Model.TotalAmount.ToString("N2")</span>
                    </div>

                    <div class="d-flex justify-content-between mb-4">
                        <span>Delivery Fee</span>
                        <span class="text-success fw-bold">R @deliveryFee.ToString("N2")</span>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between mb-4">
                        <span class="h5 fw-bold">Total to Pay</span>
                        <span class="h4 fw-bold text-dark">R @finalTotal.ToString("N2")</span>
                    </div>

                    <button class="btn btn-lg w-100 fw-bold text-white mb-3 shadow-sm" style="background-color: #0077ED;">
                        Proceed to Payment
                    </button>

                    <form method="post" asp-page-handler="ClearCart">
                        <button class="btn btn-sm btn-link text-danger w-100 text-decoration-none">
                            <i class="bi bi-trash"></i> Empty Shopping Cart
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>