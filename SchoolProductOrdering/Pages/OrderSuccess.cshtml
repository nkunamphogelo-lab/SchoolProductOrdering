@page
@{
    ViewData["Title"] = "Order Successful";
}

<div class="container py-5 text-center">
    <div id="receipt-area">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
        <h1 class="fw-bold mt-3">Thank You!</h1>
        <p class="lead text-muted">Your order has been placed successfully.</p>
        <hr class="my-4 mx-auto" style="max-width: 400px;">

        <div class="text-start mx-auto p-4 bg-light rounded shadow-sm" style="max-width: 500px;">
            <h5 class="fw-bold mb-3">Order Details</h5>
            <p class="mb-1"><strong>Status:</strong> Pending Delivery</p>
            <p class="mb-1"><strong>Date:</strong> @DateTime.Now.ToString("f")</p>
            <p class="text-muted small mt-3">A confirmation email will be sent to your provided address.</p>
        </div>
    </div>

    <div class="mt-5 d-flex justify-content-center gap-3 no-print">
        <button onclick="window.print()" class="btn btn-outline-dark rounded-pill px-4">
            <i class="bi bi-file-earmark-pdf"></i> Download Receipt
        </button>

        <a asp-page="/Products/Index" class="btn btn-success rounded-pill px-4">
            Return to Shop
        </a>
    </div>
</div>

<style>
    @@media print {
        .no-print {
            display: none !important;
        }

        body {
            background-color: white !important;
        }

        .container {
            margin: 0 !important;
            padding: 20px !important;
        }
    }
</style>