@page
@model SchoolProductOrdering.Pages.OrderSuccessModel
@{
    ViewData["Title"] = "Thank You";
}

<div class="container py-5 text-center">
    <div class="mb-4">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
    </div>

    <h1 class="display-4 fw-bold">Thank You!</h1>
    <p class="lead text-muted">Your order has been placed successfully.</p>
    <hr class="mx-auto" style="max-width: 400px;">

    <div class="card p-4 border-0 shadow-sm text-start mx-auto mt-4" style="max-width: 500px;">
        <h4 class="fw-bold mb-3">Order Details</h4>

        <p class="mb-2"><strong>Order Date:</strong> @TempData["OrderDate"]</p>
        <p class="mb-2"><strong>Estimated Delivery:</strong> @TempData["DeliveryDate"]</p>

        <p class="text-muted small mt-3">
            <i class="bi bi-envelope-check text-success me-2"></i>
            A confirmation email has been sent to <strong>@TempData["UserEmail"]</strong>.
        </p>
    </div>

    <div class="mt-5 d-flex justify-content-center gap-3">
        <button onclick="window.print()" class="btn btn-outline-dark rounded-pill px-4">
            <i class="bi bi-printer me-2"></i> Print Receipt
        </button>
        <a asp-page="/Products/Index" class="btn text-white rounded-pill px-4" style="background-color: #017C45;">
            Return to Shop
        </a>
    </div>
</div>